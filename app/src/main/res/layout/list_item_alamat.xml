<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_atas_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atas Nama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nomor_pengiriman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="081234567890"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_atas_nama" />

    <TextView
        android:id="@+id/tv_alamat_lengkap_pengiriman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jln. Alamat Lengkap Pengiriman, RT.0/RW.0, Kelurahan Pengiriman, Pengiriman (no. 0)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nomor_pengiriman" />

    <TextView
        android:id="@+id/tv_alamat_singkat_pengiriman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PENGIRIMAN, KOTA PENGIRIMAN, PROVINSI PENGIRIMAN. ID 00000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_alamat_lengkap_pengiriman" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#FFBB46"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_alamat_singkat_pengiriman" />

    <TextView
        android:id="@+id/tv_ubah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubah"
        android:textColor="#FFBB46"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_alamat_lengkap_pengiriman"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>